---
import LanguagePicker from "../components/LanguagePicker.astro";
import MainNav from "../components/MainNav.astro";
import type { LanguageCode } from "../i18n/ui";

interface Props {
  lang: LanguageCode;
}
const { lang } = Astro.props;
---

<!doctype html>
<html lang={lang}>
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="sitemap" href="/sitemap-index.xml" />
    <meta name="generator" content={Astro.generator} />
    <title>Astro i18n sitemap</title>
  </head>
  <body>
    <header>
      <nav>
        <MainNav lang={lang} />
      </nav>
    </header>
    <main>
      <slot />
    </main>
    <footer>
      <p>&copy; 2025 example.com</p>
      <nav>
        <LanguagePicker />
      </nav>
    </footer>
  </body>
</html>

<style>
  html,
  body {
    margin: 0;
    width: 100%;
    height: 100%;
    color: #ffffff;
    background: #17181c;
    font-family:
      system-ui,
      -apple-system,
      BlinkMacSystemFont,
      "Segoe UI",
      Roboto,
      Oxygen,
      Ubuntu,
      Cantarell,
      "Open Sans",
      "Helvetica Neue",
      sans-serif;
  }
  header {
    background: #23262f;
  }
  main {
    padding: 2rem;
  }
  footer {
    font-size: small;
  }
</style>
